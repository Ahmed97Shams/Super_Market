<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Super_Market</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Super_Market.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href=" wwwroot\css\bootstrap.min.css"/>
   
    
    <style>
        .nav{
          direction: rtl;

        }
        .myfooter{
          text-align: center;
          background-color: black;
          color: white;
          position: fixed;
          width: 100%;
          bottom: 0;
        }
        .mydiv{
          border: solid;
        }
        .mydiv2{
          padding-left: 0;
          border: solid;
          text-align: right;
        }
        .myrow{
          height: 850px;
          padding-top:65px ;
        }
  </style>
</head>
<body>
  <nav class="nav navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
  <!-- Brand/logo -->
      <a class="navbar-brand" href="#">
       <img src="/images/logo.png" alt="logo" style="width:40px;">
      </a>
  <!-- Links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/Index">Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/Items/ShowItems">Itmes</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/Groups/ShowGroups">Groups</a>
      </li>
    </ul>
</nav>
<div class="row myrow" >
  <div class="col-10 mydiv">
                @RenderBody()

    
  </div>
  <div class="col-2 mydiv2">
    <ul class="list-group">
      <a asp-page="/Index" class="list-group-item">الصفحة الرئيسية</a>
      <a asp-page="/Items/ShowItems" class="list-group-item">الأصناف</a>
      <a asp-page="/Groups/ShowGroups" class="list-group-item">مجموعات الأصناف </a>
  
 
    </ul>
  </div>
</div>
        
    

<div class="myfooter">
  <p>&copy; 2023 - Super Market</p>    
</div>
 
  

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>